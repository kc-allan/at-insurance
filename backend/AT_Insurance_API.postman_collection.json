{
  "info": {
    "name": "AT Insurance API",
    "description": "Complete API collection for AT Insurance - Farmer Insurance Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "at-insurance-api-v1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "phone_number",
      "value": "+254712345678",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "description": "User authentication and profile management endpoints",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"registration\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/auth/send-otp/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "auth", "send-otp", ""]
            },
            "description": "Send OTP to phone number for authentication"
          },
          "response": []
        },
        {
          "name": "Verify OTP & Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access);",
                  "    pm.collectionVariables.set('refresh_token', response.refresh);",
                  "    console.log('Tokens saved successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone_number\": \"{{phone_number}}\",\n  \"otp_code\": \"123456\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/auth/verify-otp/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "auth", "verify-otp", ""]
            },
            "description": "Verify OTP and get JWT tokens"
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/accounts/profile/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "profile", ""]
            },
            "description": "Get current user profile"
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"county\": \"Nairobi\",\n  \"sub_county\": \"Westlands\",\n  \"farming_type\": \"mixed\",\n  \"farm_size_acres\": 5.0,\n  \"primary_crops\": [\"maize\", \"beans\"],\n  \"years_farming_experience\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/profile/update/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "profile", "update", ""]
            },
            "description": "Update user profile information"
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access);",
                  "    pm.collectionVariables.set('refresh_token', response.refresh);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/auth/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "auth", "refresh", ""]
            },
            "description": "Refresh access token"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/auth/logout/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "auth", "logout", ""]
            },
            "description": "Logout and blacklist refresh token"
          },
          "response": []
        }
      ]
    },
    {
